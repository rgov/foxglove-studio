{
  "extends": "@foxglove/tsconfig/tsconfig.base.json",
  "include": ["./**/*", "./**/*.json", "./.storybook/**/*", "../package.json"],
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "../",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "es2020"],
    "paths": {
      // micro-memoize types do not work with our strict compiler settings
      // This overrides the module provided types with our @types package.
      // We use several node_module fallbacks to be flexible to where the @types package is installed.
      "micro-memoize": [
        "./node_modules/@types/micro-memoize",
        "../node_modules/@types/micro-memoize",
        "../../node_modules/@types/micro-memoize"
      ],
      // This is only needed for vscode import suggestions
      "@foxglove-studio/app/*": ["./*"]
    }
  },
  "references": [
    { "path": "../packages/@foxglove/hooks" },
    { "path": "../packages/@types/cytoscape-dagre" },
    { "path": "../packages/@types/memoize-weak" },
    { "path": "../packages/@types/micro-memoize" },
    { "path": "../packages/@types/quickhull3d" },
    { "path": "../packages/@types/rc-color-picker" },
    { "path": "../packages/@types/react-document-events" },
    { "path": "../packages/@types/react-hover-observer" },
    { "path": "../packages/@types/regl-worldview" },
    { "path": "../packages/@types/roslib" },
    { "path": "../packages/@types/text-metrics" },
    { "path": "../packages/@types/universal-url" },
    { "path": "../packages/@types/wasm-lz4" },
    { "path": "../packages/electron-socket" },
    { "path": "../packages/just-fetch" },
    { "path": "../packages/log" },
    { "path": "../packages/ros1" },
    { "path": "../packages/rosmsg-deser" },
    { "path": "../packages/velodyne-cloud" },
    { "path": "../packages/wasm-bz2" },
    { "path": "../packages/xmlrpc" }
  ]
}
